{
  "manifest_version": 2,
  "name": "Drumpfinator",
  "version": "1.0",
  "description": "An extension that replaces all instances of 'Trump' with 'Drumpf'",
  "content_scripts": 
  [
    {
      "matches": ["*://*/*"],
      "js": ["script.js"],
      "run_at": "document_end"
    }
  ],
  "permissions" : ["tabs", "*://*/*"],
  "background" : {
    "scripts" : ["background.js"],
    "persistent" : false
  },
  "browser_action": {
    "default_icon": "trump.png"
  }
}